

  <h1 class="text-center right-pan-title">Nowy administrator</h1>
  <%= form_for(:admin_user, :url => {:action => "create"}) do |f| %>

  <div class="container table bg-dark" style="width: 40%; border-radius: 5px; padding: 20px;">
    <form>
      <div class="form-group">
        <label>Imię</label>
        <%= f.text_field(:name, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Nazwisko</label>
        <%= f.text_field(:surename, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Nazwa użytkownika</label>
        <%= f.text_field(:admin_nick, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field(:email, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Hasło</label>
        <label style="font-size: 14px;"><em>(Minimalna ilość znaków: <%= @minimum_password_length %>)</em></label>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Powtórz hasło</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="text-center">
        <%= link_to("Wróć", {:action => "index"}, :class => "btn btn-primary") %>
        <%= f.submit("Dodaj administratora", :class => "btn btn-success") %>
      </div>
    </form>
  </div>
<% end %>
