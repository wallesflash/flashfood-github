<div class="container right-pan-view">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :validate => true)  do |f| %>
  <div class="container table bg-dark" style="width: 40%; border-radius: 5px; padding: 20px;">
    <form>
      <div class="form-group">
        <label>Nazwa użytkownika</label>
        <%= f.text_field(:admin_nick, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Hasło</label>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <br>
      <div class="text-center">
        <%= f.submit "Zaloguj", :class => "btn btn-success btn-block" %>
      </div>
    </form>
  </div>
  <% end %>
</div>
