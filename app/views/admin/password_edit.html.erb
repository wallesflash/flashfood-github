<h1 class="text-center right-pan-title">Zmiana hasła dministratora: "<%= @admin_pwd.admin_nick %>"</h1><br>
<%= form_for(:admin_pwd, :url => {:action => "password_update", :id => @admin_pwd.id}) do |f| %>

<div class="container table bg-dark" style="width: 40%; border-radius: 5px; padding: 20px;">
  <form>
    <div class="form-group">
      <label>Aktualne hasło</label>
      <%= f.password_field(:current_password, class: "form-control") %>
    </div>
    <div class="form-group">
      <label>Nowe hasło </label>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Powtórz hasło</label>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="text-center">
      <%= link_to("Wróć", {:action => "edit", :id => @admin_pwd.id}, :class => "btn btn-primary") %>
      <%= f.submit("Zapisz zmiany", :class => "btn btn-danger") %>
    </div>
  </form>
</div>
<% end %>
