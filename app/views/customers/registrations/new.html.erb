<% if customer_signed_in? %>
  <p>Hello,
    <%= current_customer.name %>
    -
    <%= link_to("Wyloguj", destroy_customer_session_path, :method => "delete") %></p>
  <br>
<%end%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :validate => true) do |f| %>

  <div class="container table bg-dark" style="width: 40%; border-radius: 5px; padding: 20px;">
    <form>
      <div class="form-group">
        <label>Imię</label>
        <%= f.text_field(:name, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Nazwisko</label>
        <%= f.text_field(:surename, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Nazwa użytkownika</label>
        <%= f.text_field(:customer_nick, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Nr telefonu</label>
        <%= f.text_field(:phone_no, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field(:email, class: "form-control") %>
      </div>
      <div class="form-group">
        <label>Hasło</label>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Powtórz hasło</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="text-center">
        <%= f.submit "Zarejestruj", :class => "btn btn-info" %>
        <%= render "customers/shared/links" %>
      </div>
    </form>
  </div>
<% end %>
