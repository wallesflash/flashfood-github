
    <h1 class="text-center right-pan-title">Edycja danych użytkownika: "<%= @customer_user.customer_nick %>"</h1>
    <%= form_for(:customer_user, :url => {:action => "update", :id => @customer_user.id}) do |f| %>

    <div class="container table bg-dark" style="width: 40%; border-radius: 5px; padding: 20px;">
      <form>
        <div class="form-group">
          <label>Imię</label>
          <%= f.text_field(:name, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>Nazwisko</label>
          <%= f.text_field(:surename, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>Nazwa użytkownika</label>
          <%= f.text_field(:customer_nick, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>Nr telefonu</label>
          <%= f.text_field(:phone_no, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>Email</label>
          <%= f.email_field(:email, class: "form-control") %>
        </div>
        <div class="text-center">
          <%= link_to("Wróć", {:action => "index"}, :class => "btn btn-primary") %>
          <%= submit_tag("Zapisz zmiany", :class => "btn btn-danger") %>
          <%= link_to("Zmiana hasła", {:action => "password_edit", :id => @customer_user.id}, :class => "btn btn-warning") %>
        </div>
      </form>
    </div>
  <%end%>
